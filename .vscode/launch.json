    "version": "0.2.0",
    "configurations": [
        {
            "name": "MNIST",
            "type": "python",
            "request": "launch",
            "module": "bagua.distributed.launch",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/examples/mnist",
            "console": "integratedTerminal",
            "args": [
                "--nproc_per_node=1",
                "main.py",
                "--algorithm",
                "sketch"
            ],
        },
        {
            "name": "Sketch Benchmark",
            "type": "python",
            "request": "launch",
            "module": "bagua.distributed.launch",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/examples/benchmark",
            "console": "integratedTerminal",
            "args": [
                "--nproc_per_node=1",
                "synthetic_benchmark.py",
                "--deterministic",
                "--num-iters",
                "20",
                "--algorithm",
                "sketch",
                "2>&1",
                "|", 
                "tee",
                "${workspaceFolder}/bench-sketch.log"
            ],
        },
        {
            "name": "QAdam Benchmark",
            "type": "python",
            "request": "launch",
            "module": "bagua.distributed.launch",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/examples/benchmark",
            "console": "integratedTerminal",
            "args": [
                "--nproc_per_node=1",
                "synthetic_benchmark.py",
                "--deterministic",
                "--num-iters",
                "20",
                "--algorithm",
                "qadam",
                "2>&1",
                "|", 
                "tee",
                "${workspaceFolder}/bench-qadam.log"
            ],
        },
        {
            "name": "simple example",
            "type": "python",
            "request": "launch",
            "module": "bagua.distributed.launch",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/examples/mnist",
            "console": "integratedTerminal",
            "args": [
                "--nproc_per_node=1",
                "main-simple.py"
            ],
        }
    ]
}